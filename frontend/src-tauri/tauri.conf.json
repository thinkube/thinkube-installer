{
  "$schema": "../../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "thinkube Installer",
  "version": "0.1.0",
  "identifier": "org.thinkube.installer",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "thinkube Installer",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "visible": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "dmg"],
    "resources": [
      "backend"
    ],
    "linux": {
      "deb": {
        "depends": ["python3", "python3-pip", "python3-venv"],
        "postInstallScript": "deb-postinst.sh"
      }
    },
    "macOS": {
      "minimumSystemVersion": "11.0"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns"
    ]
  }
}
